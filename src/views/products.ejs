<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Products</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { font-family: Arial, sans-serif; }

    /* Sidebar */
    .sidebar {
      height: 100vh;
      background: #343a40;
      padding-top: 1rem;
      position: sticky;
      top: 0;
    }
    .sidebar a {
      color: #fff;
      display: block;
      padding: 10px;
      text-decoration: none;
    }
    .sidebar a:hover {
      background: #495057;
    }

    /* Adjust content padding */
    .content {
      padding: 20px;
    }

    /* Card image fix */
    .card img {
      height: 180px;
      object-fit: cover;
    }

    /* Mobile sidebar toggle button */
    @media (max-width: 768px) {
      .sidebar {
        position: relative;
        height: auto;
      }
    }
  </style>
</head>
<body>


  <!-- Navbar -->
  <%- include('navbar') %>


<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <%- include('sidebar') %>

    <!-- Main Content -->
    <main class="col-12 col-md-10 content">
      <h1 class="mb-4 text-center">Our Products</h1>

      <% if(products.length === 0){ %>
        <p class="text-center">No products available.</p>
      <% } %>

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        <% products.forEach(product => { %>
          <div class="col">
            <div class="card h-100 shadow-sm">
              <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
              <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><%= product.description || "No description provided." %></p>
                <p class="fw-bold text-success">Price: $<%= product.price %></p>
              </div>
              <div class="card-footer d-flex justify-content-between">
                <a href="/edit/<%= product._id %>" class="btn btn-primary btn-sm">Edit</a>
                <a href="/delete/<%= product._id %>" class="btn btn-danger btn-sm">Delete</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <a href="/Dashboard" class="btn btn-secondary mt-4">Back</a>
    </main>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
